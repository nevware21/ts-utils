{
    "name": "@nevware21/ts-utils",
    "description": "Common JavaScript functions for TypeScript",
    "version": "0.1.1",
    "homepage": "https://github.com/nevware21/ts-utils",
    "license": "MIT",
    "author": {
        "name": "Nevware21",
        "email": "github@nevware21.com"
    },
    "keywords": [
        "typescript",
        "javascript"
    ],
    "main": "dist/umd/ts-utils.js",
    "module": "dist-esm/index.js",
    "types": "types/index.d.ts",    
    "scripts": {
        "build": "grunt ts_utils --verbose && npm run package",
        "rebuild": "npm run build && npm run test && npm run docs",
        "package": "rollup -c ts-utils/rollup.config.js",
        "test": "npm run test:browser && npm run test:worker && npm run test:node",
        "test:node": "nyc ts-mocha -p ts-utils/test/tsconfig.test.json ts-utils/test/src/node/**/*.test.ts ts-utils/test/src/common/**/*.test.ts",
        "test:browser": "nyc karma start karma.browser.conf.js --single-run",
        "test:worker": "karma start karma.worker.conf.js --single-run",
        "test:debug.browser": "karma start karma.debug.browser.conf.js --watch",
        "test:debug.worker": "karma start karma.debug.worker.conf.js --watch",
        "lint": "grunt ts_utils-lint",
        "codecov": "nyc report --reporter=json && codecov -f coverage/*.json",
        "clean": "git clean -xdf && npm install",
        "cleanBuild": "npm run clean && npm run rebuild",
        "docs": "typedoc"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/nevware21/ts-utils.git"
    },
    "bugs": {
        "url": "https://github.com/nevware21/ts-utils/issues"
    },
    "licenses": [
        {
            "type": "MIT",
            "url": "https://github.com/nevware21/ts-utils/blob/main/LICENSE"
        }
    ],
    "engines": {
        "node": ">= 0.8.0"
    },
    "dependencies": {
    },
    "devDependencies": {
        "@nevware21/grunt-eslint-ts": "0.2.4",
        "@nevware21/grunt-ts-plugin": "0.4.5",
        "@types/chai": "^4.3.1",
        "@types/eslint": "^8.4.2",
        "@types/estree": "^0.0.51",
        "@types/mocha": "^9.1.1",
        "@types/sinon": "^10.0.11",
        "@typescript-eslint/eslint-plugin": "^5.26.0",
        "@typescript-eslint/parser": "^5.26.0",
        "eslint": "^8.16.0",
        "eslint-plugin-security": "^1.5.0",
        "eslint-formatter-codeframe": "^7.32.1",
        "grunt": "^1.5.3",
        "grunt-cli": "^1.4.3",
        "rollup": "^2.75.3",
        "@rollup/plugin-commonjs": "^22.0.0",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "rollup-plugin-minify-es": "^1.1.1",
        "@rollup/plugin-typescript": "^8.3.3",
        "@rollup/plugin-json": "^4.1.0",
        "uglify-js": "^3.15.5",
        "typescript": "^4.7.2",
        "mocha": "^10.0.0",
        "ts-mocha": "^10.0.0",
        "nyc": "^15.1.0",
        "codecov": "^3.8.3",
        "typedoc": "^0.22.16",
        "typedoc-plugin-markdown": "^3.12.1",
        "chai": "^4.3.6",
        "karma": "^6.3.20",
        "karma-mocha": "^2.0.1",
        "karma-mocha-webworker": "^1.3.0",
        "karma-coverage-istanbul-reporter": "^3.0.3",
        "karma-spec-reporter": "^0.0.34",
        "karma-chrome-launcher": "^3.1.1",
        "karma-rollup-preprocessor": "^7.0.8",
        "karma-typescript": "^5.5.3",
        "chromium": "^3.0.3",
        "puppeteer": "^14.2.1",
        "sinon": "^14.0.0"
    },
    "peerDependencies": {
        "typescript": ">=1"
    }
}
